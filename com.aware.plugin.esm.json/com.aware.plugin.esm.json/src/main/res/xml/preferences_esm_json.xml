<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="plugin_esm_json"
    android:title="@string/app_name">

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="status_plugin_esm_json"
        android:persistent="true"
        android:summary="Activate/deactivate plugin" />

    <EditTextPreference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:defaultValue="https://aware.lucidcardinality.com/esm/example.json"
        android:dependency="status_plugin_esm_json"
        android:key="url_plugin_esm_json"
        android:persistent="true"
        android:summary="URL containing ESM JSON schedule"
        android:title="URL" />

</PreferenceScreen>
